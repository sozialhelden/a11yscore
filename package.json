{
	"name": "a11yscore",
	"private": true,
	"scripts": {
		"dev": "nitro dev",
		"build": "nitro build",
		"preview": "bun .output/server/index.mjs",
		"lint": "biome lint && alex -w",
		"lint:fix": "biome lint --write && alex -w",
		"format": "biome format",
		"format:fix": "biome format --write",
		"typecheck": "tsc --noEmit",
		"test": "bun run test:unit",
		"test:unit": "bun test",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"task:run": "nitro task run",
		"task:list": "nitro task list",
		"transifex:sync": "env-cmd --use-shell -- txjs-cli push src/ --token=\\$NITRO_TRANSIFEX_TOKEN --secret=\\$NITRO_TRANSIFEX_SECRET",
		"postinstall": "nitro prepare && husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@transifex/cli": "7.1.4",
		"@types/bun": "1.2.19",
		"@types/pg": "8.15.4",
		"alex": "11.0.1",
		"env-cmd": "10.1.0",
		"husky": "9.1.7",
		"lint-staged": "16.1.2",
		"nitropack": "2.12.4",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"@sozialhelden/core": "2.2.0",
		"@transifex/native": "7.1.4",
		"dotenv": "17.2.1",
		"drizzle-kit": "0.31.4",
		"drizzle-orm": "0.44.3",
		"pg": "8.16.3"
	}
}
