{
  "name": "a11yscore",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"nitro dev\" \"bun src/server/queue/worker.ts\"",
    "build": "nitro build",
    "preview": "bun .output/server/index.mjs",
    "lint": "biome lint && alex -w",
    "lint:fix": "biome lint --write && alex -w",
    "format": "biome format",
    "format:fix": "biome format --write",
    "typecheck": "tsc --noEmit",
    "test": "bun run test:unit && bun run test:e2e",
    "test:unit": "bun test -t unit",
    "test:e2e": "bun test -t e2e",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "job:compute-scores": "env-cmd -- bash -c 'curl \"http://localhost:3000/a11yscore/v1/auth/queue/jobs/compute-scores\" --request POST --header \"Authorization: Basic $(echo -n $NITRO_INTERNAL_AUTH_USER:$NITRO_INTERNAL_AUTH_PASSWORD | base64)\"'",
    "job:compute-admin-area-score": "env-cmd -- bash -c 'curl \"http://localhost:3000/a11yscore/v1/auth/queue/jobs/compute-admin-area-score\" --request POST --header \"Authorization: Basic $(echo -n $NITRO_INTERNAL_AUTH_USER:$NITRO_INTERNAL_AUTH_PASSWORD | base64)\" --header \"Content-Type: application/json\" --data \"{\\\"adminArea\\\":{\\\"id\\\":\\\"$1\\\"}}\"' _ ",
    "job:sync-admin-areas": "env-cmd -- bash -c 'curl \"http://localhost:3000/a11yscore/v1/auth/queue/jobs/sync-admin-areas\" --request POST --header \"Authorization: Basic $(echo -n $NITRO_INTERNAL_AUTH_USER:$NITRO_INTERNAL_AUTH_PASSWORD | base64)\"'",
    "transifex:sync": "env-cmd -- txjs-cli push src/ --token=\\$NITRO_TRANSIFEX_TOKEN --secret=\\$NITRO_TRANSIFEX_SECRET",
    "postinstall": "nitro prepare && husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@transifex/cli": "7.1.5",
    "@types/bun": "1.3.2",
    "@types/pg": "8.15.6",
    "@types/slug": "^5.0.9",
    "alex": "11.0.1",
    "env-cmd": "11.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "nitropack": "2.12.9",
    "type-fest": "5.2.0",
    "typescript": "5.9.3",
    "concurrently": "9.2.1"
  },
  "dependencies": {
    "@sozialhelden/core": "2.3.0",
    "@transifex/native": "7.1.5",
    "bullmq": "5.63.2",
    "dotenv": "17.2.3",
    "drizzle-kit": "0.31.7",
    "drizzle-orm": "0.44.7",
    "pg": "8.16.3",
    "slug": "^11.0.1"
  }
}
